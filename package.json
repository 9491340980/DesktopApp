{
  "name": "RMX-App",
  "version": "1.0.0",
  "main": "main.js",
  "productName": "RMX Desktop",
  "description": "RMX Desktop Application",
  "author": "Your Name",
  "scripts": {
    "dev": "ng serve",
    "electron:dev": "set ELECTRON_START_URL=http://localhost:4200 && electron electron-configs/main.dev.js",

    "build:dev": "ng build --configuration dev",
    "copy-main-dev-pkg": "node -e \"require('fs').copyFileSync('electron-configs/main.dev.packaged.js', 'main.js')\"",
    "package:dev": "npm run build:dev && npm run copy-main-dev-pkg && electron-builder build --win --x64 --config electron-builder.dev.json",

    "build:qa": "ng build --configuration qa",
    "copy-main-qa": "node -e \"require('fs').copyFileSync('electron-configs/main.qa.js', 'main.js')\"",
    "package:qa": "npm run build:qa && npm run copy-main-qa && electron-builder build --win --x64 --config electron-builder.qa.json",

    "build:prod": "ng build --configuration production",
    "copy-main-prod": "node -e \"require('fs').copyFileSync('electron-configs/main.prod.js', 'main.js')\"",
    "package:prod": "npm run build:prod && npm run copy-main-prod && electron-builder build --win --x64 --config electron-builder.prod.json",

    "publish:dev": "npm run build:dev && npm run copy-main-dev-pkg && electron-builder build --win --x64 --config electron-builder.dev.json --publish always",
    "publish:qa": "npm run build:qa && npm run copy-main-qa && electron-builder build --win --x64 --config electron-builder.qa.json --publish always",
    "publish:prod": "npm run build:prod && npm run copy-main-prod && electron-builder build --win --x64 --config electron-builder.prod.json --publish always"
  },
  "build": {
    "appId": "com.company.rmxdesktop",
    "productName": "RMX Desktop",
    "publish": [
      {
        "provider": "github",
        "owner": "9491340980",
        "repo": "rmx-desktop-releases"
      }
    ],
    "directories": {
      "output": "release"
    },
    "files": [
      "main.js",
      "package.json",
      "build/**/*",
      {
        "from": "dist",
        "to": "dist",
        "filter": [
          "**/*"
        ]
      }
    ],
    "extraResources": [
      {
        "from": "build/icon.ico",
        "to": "build/icon.ico"
      }
    ],
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "forceCodeSigning": false,
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico"
    }
  },
  "private": true,
  "dependencies": {
    "@angular/cdk": "~20.2.12",
    "@angular/common": "^20.0.0",
    "@angular/compiler": "^20.0.0",
    "@angular/core": "^20.0.0",
    "@angular/forms": "^20.0.0",
    "@angular/material": "~20.2.12",
    "@angular/platform-browser": "^20.0.0",
    "@angular/router": "^20.0.0",
    "crypto-js": "^4.2.0",
    "electron-updater": "^6.3.9",
    "material-design-icons-iconfont": "^6.7.0",
    "material-icons": "^1.13.14",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.0.2",
    "@angular/cli": "^20.0.2",
    "@angular/compiler-cli": "^20.0.0",
    "@types/crypto-js": "^4.2.2",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^24.10.0",
    "electron": "^39.1.0",
    "electron-builder": "^26.0.12",
    "jasmine-core": "~5.7.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.8.2",
    "wait-on": "^9.0.3"
  }
}
